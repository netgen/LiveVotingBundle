{% extends 'LiveVotingBundle::base.html.twig' %}

{% block body -%}
    <h1>Presentation edit</h1>



    {{ form_start(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.presentationName) }}
        {{ form_widget(edit_form.presentationName) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.presenterName) }}
        {{ form_widget(edit_form.presenterName) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.presenterSurname) }}
        {{ form_widget(edit_form.presenterSurname) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.image) }}
        {{ form_widget(edit_form.image) }}
    </div>

    {{ form_end(edit_form) }}


    <ul class="record_actions">
        <li>
            <a href="{{ path('user_presentations')}}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
