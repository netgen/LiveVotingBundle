{% extends 'LiveVotingBundle::baseAdmin.html.twig' %}

{% block title %}Edit|Presentation|LiveVoting{% endblock %}
{% block mainHeading %}Edit presentation{% endblock %}

{% block body -%}

    {% for flashMessage in app.Session.flashbag.get('message') %}
        <div class="alert alert-danger">
            <div class="text">{{flashMessage}}</div>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-xs-12 col-sm-4 margin-top">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row secondary-footer">
        <div class="col-xs-12">
            <a href="{{ path('admin_presentation', {'event_id':entity.getEvent.id} ) }}"><button type="button" class="btn">Back</button></a>
            {% if remove_votes_enabled %}
                <a href="{{ path('admin_presentation_vote_delete', {'id':entity.id} ) }}"><button type="button" class="btn">Remove all votes for this presentation</button></a>
            {% endif %}
        </div>
    </div>

{% endblock %}