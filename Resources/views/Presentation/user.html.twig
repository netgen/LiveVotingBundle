{% extends 'LiveVotingBundle::base.html.twig' %}

{% block body -%}
    <h1>Presentations for user:  {{ user.email }} </h1>

    <table class="records_list table">
        <thead>
        <tr>
            <th></th>
            <th>Presentation name</th>
            <th>Voting status</th>
            <th>Edit presentation</th>
            <th>Remove presentation</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="{{ entity[0].votingEnabled?'success':'danger' }}">
                <td><img width="40px" src='{{ asset('bundles/livevoting/'~(entity[0].getImage ? entity[0].getWebPath: 'img/man1.png'))}}'/></td>
                <td>{{ entity[0].presentationName }}</td>
                <td>
                    {{ form(entity[1]) }}
                </td>
                <td>

                    <a class='btn btn-primary' href="{{ path('user_presentation_edit', { 'id': entity[0].id }) }}">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('admin_presentation_delete', { 'id': entity[0].id }) }}"> <span class="glyphicon glyphicon-remove"></span> Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
