{% extends 'LiveVotingBundle::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Add new questions for {{ event }}</h3>
      </div>
      <div class="panel-body">
      
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    {{ form_label(form.question) }}
                    {{ form_widget(form.question) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(form.question_type) }}
                    {{ form_widget(form.question_type) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}

      </div><br>
        <a class="btn btn-large btn-primary btn-block" href="{{ path('admin_question', {'event_id':event_id}) }}">
            Back to the list
        </a>
    </div>
{% endblock %}
