{% extends 'LiveVotingBundle::base.html.twig' %}

{% block body -%}
    <h1>Event list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Event name</th>
                <th>Event state</th>
                <th>Edit event</th>
                <th>View presentations</th>
                <th>View questions</th>
                <th>View results</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a target="_blank" href="{{ path('admin_presentation', { 'event_id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.stateName }}</td>
                <td>
                    <a class='btn btn-primary' href="{{ path('admin_event_edit', { 'id': entity.id }) }}">Edit</a>
                </td>

                <td>
                    <a class='btn btn-primary' href="{{ path('admin_presentation', { 'event_id': entity.id }) }}">View</a>
                </td>

                <td>
                    <a class='btn btn-info' href="{{ path('admin_question', { 'event_id': entity.id }) }}">Questions ({{ entity.getQuestions()|length }})</a>
                </td>

                <td>
                    <a class='btn {{ entity.allowViewingResults ? 'btn-success':'btn-warning'  }}' target="_blank" href="{{ path('result', { 'event_id': entity.id }) }}">
                        <span class='glyphicon glyphicon-eye-{{ entity.allowViewingResults ? 'open':'close'  }}'></span>
                        Live
                    </a>
                    <a class='btn btn-primary' target="_blank" href="{{ path('result_view', { 'event_id': entity.id }) }}">Final</a>
                </td>

                <td>
                    <a class="btn btn-danger" href="{{ path('admin_event_delete', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-remove"></span> Delete</a>
                </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="list-inline">
        <li>
            <a class="btn btn-primary" href="{{ path('admin_event_new') }}">
                <span class="glyphicon glyphicon-plus"></span>Create a new event
            </a>
        </li>
        <li>
            <a class="btn btn-success" href="{{ path ('admin_prize_draw')}}">
                Prize draw
            </a>
        </li>
    </ul>

    <a href="/admin">Back to admin hompage</a>
    {% endblock %}
